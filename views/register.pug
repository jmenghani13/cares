extends layout


block content
    .container#reg
      h1 Register
      form(method='POST' , action='/users/register')
        .form-group
          label Name:
          input.form-control(name='name', type='text')
        .form-group
          label Email:
          input.form-control(name='email', type='text')
        .form-group
          label Password:
          input.form-control(name='password', type='password')
        .form-group
          label Confirm Password:
          input.form-control(name='re_password', type='password')
        .form-group
          label Phone Number:
          input.form-control(name='number', type='text')
        .form-group
          label House/Apartment Number:
          input.form-control(type='text', name='house_num')
        .form-group
          label Address Line 1:
          input.form-control(type='text', name='add_1')
        .form-group
          label Address Line 2:
          input.form-control(type='text', name='add_2')
        .row.form-group
          .col-md-4
            label City:
            input.form-control(type='text', name='city')
          .col-md-4
            label Pincode:
            input.form-control(type='number', name='pincode')
          .col-md-4
            label State:
            input.form-control(type='text', name='state')
        br
        input.btn.btn-primary.btn-block(type='submit',value='Submit')
      
